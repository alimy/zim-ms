<tars>
        <application>
                <server>
                        app={{ .AppName }}
                        server={{ .Target }}
                        local=tcp -h 127.0.0.1 -p 10027 -t 30000
						logpath=/tmp
                        <{{ .SrvName }}Adapter>
                                allow
                                endpoint=tcp -h 127.0.0.1 -p 10028 -t 60000
                                handlegroup={{ .SrvName }}Adapter
                                maxconns=200000
                                protocol=tars
                                queuecap=10000
                                queuetimeout=60000
                                servant={{ .SrvName }}
                                shmcap=0
                                shmkey=0
                                threads=1
                        </{{ .SrvName }}Adapter>
                </server>
        </application>
</tars>
